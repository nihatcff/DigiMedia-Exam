@model List<CategoryGetVM>

<div class="container">
	<div class="row">
		<div><h2>Categories Table</h2></div>
		<a asp-action="Create" class="btn btn-success">Create</a>
		<table class="table table-dark table-striped">

			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>

				@foreach (var category in Model)
				{
					<tr>
						<th scope="row">@category.Id</th>
						<td>@category.Name</td>
						<td>
							<a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Update</a>
							<a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
						</td>
					</tr>

				}

			</tbody>
		</table>
	</div>
</div>